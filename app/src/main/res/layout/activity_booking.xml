<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guest.BookingActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/hostel_image_view_pager"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="300dp"/>

            <TextView
                android:id="@+id/hostel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hostel_image_view_pager"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/viga"
                android:text="@string/name_of_hostel"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/hostel_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hostel_name"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="8dp"
                android:text="@string/type_of_hostel"/>
            <ImageView
                android:id="@+id/image_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/hostel_image_view_pager"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_map"
                android:layout_alignParentEnd="true"
                android:text="@string/map"
                android:layout_marginEnd="12dp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/facilities_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:layout_margin="15dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/facilities"
                        android:textSize="24sp"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/viga"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/facilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/viga"
                        android:layout_margin="4dp"
                        android:textSize="12sp"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/facilities_card_view"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews and Rating"
                        android:textColor="@color/colorBlack"
                        android:textSize="24sp"
                        android:fontFamily="@font/viga"
                        android:layout_gravity="center_horizontal"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Cleanliness"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/viga"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="4.3"
                            android:layout_marginStart="5dp"
                            android:padding="8dp"
                            android:textColor="@color/colorWhite"/>



                    </LinearLayout>



                    <RatingBar
                        android:id="@+id/rating_cleanliness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:stepSize="0.5"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Security"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/viga"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="4.3"
                            android:layout_marginStart="5dp"
                            android:padding="8dp"
                            android:textColor="@color/colorWhite"/>



                    </LinearLayout>



                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:numStars="5"
                        android:isIndicator="true"

                        android:stepSize="0.5"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Food"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/viga"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="4.3"
                            android:layout_marginStart="5dp"
                            android:padding="8dp"
                            android:textColor="@color/colorWhite"/>



                    </LinearLayout>



                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:stepSize="0.5"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Environment"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/viga"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="4.3"
                            android:layout_marginStart="5dp"
                            android:padding="8dp"
                            android:textColor="@color/colorWhite"/>



                    </LinearLayout>



                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:stepSize="0.5"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Staff"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/viga"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="4.3"
                            android:layout_marginStart="5dp"
                            android:padding="8dp"
                            android:textColor="@color/colorWhite"/>



                    </LinearLayout>



                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:stepSize="0.5"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="Value For Money"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/viga"
                            android:padding="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccent"
                            android:text="4.3"
                            android:layout_marginStart="5dp"
                            android:padding="8dp"
                            android:textColor="@color/colorWhite"/>



                    </LinearLayout>



                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:stepSize="0.5"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/see_all_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all reviews"
                android:layout_below="@id/card_view_reviews"
                android:textSize="24sp"
                android:onClick="goToReviewsActivity"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/viga"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20sp"
                android:text="Add Your Review"
                android:textAllCaps="false"
                android:fontFamily="@font/viga"
                android:layout_below="@id/see_all_reviews"
                android:layout_marginStart="20dp"
                android:onClick="goAddYourOwnReview"/>







            


        </RelativeLayout>

    </ScrollView>


    <!--<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="#FFEBEE"
        android:fontFamily="@font/viga"
        android:padding="8dp"
        android:text="@string/book_now"
        android:textAlignment="center"
        android:theme="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:textSize="16sp" />
        -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/book_now"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/viga"
        android:text="             Book Now"
        android:padding="8dp"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorWhite"/>


</RelativeLayout>