<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guest.BookingDetailGuest">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:padding="8dp">



        <TextView
            android:id="@+id/tv_hostel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:text="Hostel Name : "
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/et_hostel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/tv_hostel_name"
            android:text="Hostel Name"
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tv_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/tv_hostel_name"
            android:layout_marginTop="12dp"
            android:text="Room Type : "
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/et_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/et_hostel_name"
            android:layout_toEndOf="@id/tv_hostel_name"
            android:text="Room Type"
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/tv_room_type"
            android:layout_marginTop="12dp"
            android:text="Price : "
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/et_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/et_room_type"
            android:layout_toEndOf="@id/tv_price"
            android:text="Room Type"
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/tv_price"
            android:layout_marginTop="12dp"
            android:text="Date : "
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/et_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_below="@id/tv_price"
            android:layout_toEndOf="@id/tv_date"
            android:text="Date"
            android:fontFamily="@font/viga"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>