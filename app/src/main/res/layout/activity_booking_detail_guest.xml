<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guest.BookingDetailGuest"
    android:layout_margin="15dp"
    android:padding="12dp"
    android:gravity="center"
    android:elevation="15dp"
    app:cardCornerRadius="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="8dp"
        android:elevation="15dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="12dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_hostel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:text="Hostel Name : "
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/et_hostel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/tv_hostel_name"
                android:text="Hostel Name"
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/tv_hostel_name"
                android:layout_marginTop="12dp"
                android:text="Room Type : "
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/et_room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_below="@id/et_hostel_name"
                android:layout_toEndOf="@id/tv_hostel_name"
                android:text="Room Type"
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/tv_room_type"
                android:layout_marginTop="12dp"
                android:text="Price : "
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_below="@id/et_room_type"
                android:layout_toEndOf="@id/tv_price"
                android:text="Price"
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Owner Name : "
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/viga"
                android:layout_below="@id/tv_price"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/et_owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Owner Name"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/viga"
                android:layout_below="@id/et_price"
                android:layout_toEndOf="@id/tv_owner_name"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/tv_owner_name"
                android:layout_marginTop="12dp"
                android:text="Date : "
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/et_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_below="@id/et_owner_name"
                android:layout_toEndOf="@id/tv_date"
                android:text="Date"
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/tv_date"
                android:layout_marginTop="12dp"
                android:text="Status : "
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/et_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_below="@id/et_date"
                android:layout_toEndOf="@id/tv_status"
                android:text="Status"
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_below="@id/tv_status"
                android:layout_marginTop="12dp"
                android:text="Phone : "
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/et_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_below="@id/et_status"
                android:layout_toEndOf="@id/tv_phone"
                android:text="Phone"
                android:fontFamily="@font/viga"
                android:textColor="@color/colorBlack"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/et_phone"
                android:layout_below="@id/et_status"
                android:src="@drawable/ic_call"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:onClick="callOwner"
                />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_phone"
                android:layout_marginTop="15dp"
                android:padding="12dp"
                android:text="Cancel Booking"
                android:onClick="cancelBooking"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/viga"/>

            <!--<Button
                android:id="@+id/btn_view_hostel_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_cancel"
                android:layout_marginTop="15dp"
                android:padding="12dp"
                android:text="View Hostel Details"
                android:onClick="ViewHostelDetails"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/viga"/>
                -->

        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>